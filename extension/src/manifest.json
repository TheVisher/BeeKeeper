{
  "manifest_version": 3,
  "name": "BeeKeeper",
  "version": "1.0.0",
  "description": "Save and organize your bookmarks with BeeKeeper",
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "scripting",
    "windows"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background/index.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/index.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup/index.html",
    "default_title": "Save to BeeKeeper"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
