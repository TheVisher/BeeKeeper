# BeeKeeper Environment Configuration
# Copy this file to .env.local and fill in your actual values

# Supabase Configuration (optional for development - comment out if not using)
# NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
# NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
# SUPABASE_SERVICE_ROLE=your_supabase_service_role_key

# NextAuth Configuration (required)
NEXTAUTH_SECRET=your_nextauth_secret_key_here
NEXTAUTH_URL=http://localhost:3000

# Email Configuration (required for magic link authentication)
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=re_your_resend_api_key_here
# Email sender address (use onboarding@resend.dev for testing)
EMAIL_FROM=BeeKeeper <onboarding@resend.dev>

# Development Configuration
ALLOW_DEV_HEADER=true
DEV_USER_ID=00000000-0000-4000-8000-000000000000
